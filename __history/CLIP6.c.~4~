#include<tv_boards.c>
#include<tv_lcd.c>
#include<tv_key4x4.c>
signed int8 bdn=0, gio=0, phut=0, giay=0;
void main()
{
   system_init();
   lcd_setup();
   setup_timer_1(T1_INTERNAL| T1_DIV_BY_8);
   set_timer1(3036);
   enable_interrupts(int_timer1);
   enable_interrupts(global);
   lcd_goto(6,0);
   lcd_data("20142157");
   while(true)
   {
      if(bdn>=10)
      {
         bdn=bdn-10;
         giay++;
         if(giay>=60)
         {
            giay=0;
            phut++;
            if(phut>=60)
            {
               phut=0;
               gio++;
               if(gio>=13)
                  gio=1;
            }
         }
      }
      lcd_goto(6,0);
      lcd_data(gio/10%10);
      lcd_data(gio%10);
      lcd_data(':');
      lcd_data(phut/10%10);
      lcd_data(phut%10);
      lcd_data(':');
      lcd_data(giay/10%10);
      lcd_data(giay%10);
   }
}
#int_timer1
void ngat_timer1()
{
   set_timer1(3036);
   bdn++;
}
