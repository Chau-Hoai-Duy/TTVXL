#include<tv_boards.c>
#include<tv_key4x4.c>
signed int8 gtcai, dem, i=0, j=0, jcu=0,k=0,l=0;
unsigned int1 cdo=0;
void kt_nut_nhan()
{
   if(key4x4_read()==ok)
   {
      if((key4x4.key!=13)&&(key4x4.key<=9))
      {
         i++;
         if((i==1)|(i>=3)) 
         {
            gtcai=key4x4.key*10;
            d7seg.led[3]=m7d[key4x4.key];
         }
         if(i==2) 
         {
            gtcai=gtcai+key4x4.key;
            d7seg.led[2]=m7d[key4x4.key];
         }
         if(i>=3) i=1;
      }
      else if(key4x4.key==13)
      {
         cdo=~cdo;
      }
      else;
   }
   d7seg_display();
}
void main()
{
   system_init();
   setup_timer_0(T0_EXT_L_TO_H| T0_DIV_1);
   set_timer0(0);
   dem=0;
   d7seg.led[0]=m7d[dem%10];
   d7seg.led[1]=m7d[dem/10%10];
   d7seg.led[2]=m7d[0];
   d7seg.led[3]=m7d[0];
   while(true)
   {
      kt_nut_nhan();
      j=get_timer0();
      if(j>100) j=0;
      if(cdo==0)
      {
         if(j!=jcu)
         {
            jcu=j;
            dem++;
            if(dem>gtcai) dem=1;
         }
      }
      else
      {
         if(j!=jcu)
         {
            jcu=j;
            dem--;
            if(dem<0) dem=gtcai;
         }
      }
      d7seg.led[0]=m7d[dem%10];
      d7seg.led[1]=m7d[dem/10%10];
      for(k=0;k<=1;k++)
      {
         d7seg.led[2]=m7d[gtcai%10];
         delay_ms(1);
         d7seg_display();
         d7seg.led[2]=0xff-128;
         delay_ms(1);
         d7seg_display();
      }
      if(i==1)
      {
         if(l<=1)
         {
            d7seg.led[2]=0xff;
            delay_ms(50);
            d7seg_display();
            d7seg.led[2]=m7d[gtcai%10];
            delay_ms(50);
            d7seg_display();
            l++;
         }
         else l=0;
      }
      d7seg.led[3]=m7d[gtcai/10%10];
      d7seg_display();
   }
}
